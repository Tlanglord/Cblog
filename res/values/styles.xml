<resources xmlns:app="http://schemas.android.com/apk/res/com.qiang.cblog" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Switch">
        <item name="offColor">#B2B2B2</item>
        <item name="offPotColor">#ECECEC</item>
        <item name="onColor">#C4EDF2</item>
        <item name="onPotColor">#3CBED1</item>
    </style>
    
    
    <style name="lightTheme" parent="AppBaseTheme">
        <item name="text_color">#4499ff</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>
    <style name="DarkTheme" parent="AppBaseTheme"></style>

</resources>